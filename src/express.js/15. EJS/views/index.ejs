<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Home Page</title>
    </head>

    <body>
        <!-- Functions in EJS -->
        <% const currentYear = new Date().getFullYear(); %>

        <h1>
            <%= currentYear %>
        </h1>

        <!-- Dynamic Data in EJS -->
        <h1>
            <%= name %>
        </h1>

        <h1>
            <%= age %>
        </h1>

        <!-- for loop in EJS -->
        <% for (let i = 0; i < 5; i++) { %>
            <p>
                <%= i %>
            </p>    
        <% } %>

        <!-- if else statement in EJS -->
        <% if (age >= 18) { %>
            <h1>Access Granted</h1>
        <% } else { %>
            <h1>Access Denied</h1>  
        <% } %>
        
        <!-- Conditional Statement in EJS -->
        <% if (age >= 18) { %>
            <h1>Access Granted</h1>
        <% } else { %>
            <h1>Access Denied</h1>  
        <% } %>
    </body>
</html>